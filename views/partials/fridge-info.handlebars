<div class="flex-1 text-center bg-gray-400 px-5 py-5 m-2 rounded" id"{{id}}">
    <div class="items-center">
        <div class="m-4">
            <h2 class="pacifico capitalize text-lg text-blue-light">{{item_name}}</h2>
            <div class="number-input">
                <p class="text-sm text-blue-light">Quantity: </p>
                <button onclick="this.parentNode.querySelector('input[type=number]').stepDown()"><i class="fas fa-minus"></i></button>
                <input class="quantity rounded-lg bg-blue-light" min="1" name="quantity" value="{{quantity}}" type="number" />
                <button onclick="this.parentNode.querySelector('input[type=number]').stepUp()" class="plus"><i class="fas fa-plus"></i></button>
            </div>
            {{#if expiration_date}}
            <p class="text-sm text-blue-light">Expires: {{format_date expiration_date}}</p>
            {{/if}}
            <input type="button" onclick="removeDiv(this)" id="delete-item-btn" class="bg-blue-100 hover:bg-blue-200 font-bold py-2 px-4 rounded-lg pacifico text-dark-blue text-sm"> Delete <i class="ml-2 fas fa-trash-alt"></i></button>
        </div>
    </div>
</div>



<script>
async function removeDiv(btnstate) {
  var eDiv = document.getElementById("item-id")
  eDiv.parentNode.removeChild(eDiv)
} 


document.getElementById("delete-item-btn").addEventListener("click", newFormHandler);
async function newFormHandler(event) {
  event.preventDefault();
  
  const id="{{id}}";

  const response = await fetch(`http://localhost:3001/api/inventory/${id}`, {
    method: 'DELETE',
    headers: {
      "Content-Type": "application/json",
    },
  });

  if (response.ok) {
    document.location.reload();
  } else {
    alert(response.statusText);
  }
}
</script>
<script src="/javascript/delete-item.js"></script>