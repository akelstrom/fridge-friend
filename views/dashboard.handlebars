{{!-- Nav --}}
<nav class="flex items-center justify-between flex-wrap bg-blue-light p-6">
    <div class="flex items-center flex-shrink-0 text-white mr-6">
        <span class="text-3xl">
            <h1 class="pacifico text-dark-blue">Fridge Friend</h1>
        </span>
    </div>
    <div class="w-full block justify-end flex-grow sm:flex sm:items-center sm:w-auto">
        <div>
            <a id="logout"
                class="inline-flex text-sm px-4 py-2 leading-none pacifico cursor-pointer
                border rounded text-dark-blue border-white pacifico font-extralight text-dark-blue text-sm p-1.5 mt-2 bg-blue-100 hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-blue-100 focus:ring-opacity-50 rounded-lg">
               logout
            </a>
        </div>
    </div>
</nav>
{{!-- Sidebar & Main Content Container --}}
<div class="flex-wrap md:flex">
    {{!-- Sidebar Content --}}
    <div class="my-0 md:w-1/4 md:h-screen w-screen bg-white">
        <button type="button" id="myBtn"
            class="pacifico mt-3 w-full inline-flex justify-center pacifico font-extralight text-dark-blue text-sm p-1.5 mt-2 bg-blue hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-blue-100 focus:ring-opacity-50 rounded-lg">
            add item
        </button>


    </div>

    {{!-- Main Content --}}
    <div class="md:w-3/4 md:h-screen w-screen bg-white">
        {{!-- Welcome Message Container --}}
        <div class="container md:mt-5 mx-auto px-4">
            <h2 class=" pacifico capitalize text-xl text-dark-blue">hello, {{username}} !here's what's in your fridge</h2>
        </div>
        {{!-- Card Container for Inventory --}}
        <div class="container mt-5 mx-auto px-2">
            <div class="flex-wrap md:flex">
                {{#each inventories as |inventory|}}
                {{> fridge-info inventory}}
                {{/each}}
            </div>
        </div>
    </div>

    {{!--Modal--}}
    <!-- This example requires Tailwind CSS v2.0+ -->
    <div class="fixed z-10 inset-0 overflow-y-auto hidden" id="modal">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">

            <div class="fixed inset-0 transition-opacity" aria-hidden="true">
                <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
            </div>

            <!-- This element is to trick the browser into centering the modal contents. -->
            <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

            <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full"
                role="dialog" aria-modal="true" aria-labelledby="modal-headline">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                            <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-headline">
                                Add an Item
                            </h3>
                            <div class="mt-2">
                                {{!--Form--}}
                                <form class="add-item-form">
                                    <div>
                                        <label for="food-item">Item:</label>
                                        <input type="text" id="food-item" />
                                    </div>
                                    <div>
                                        <label for="qty">Qty:</label>
                                        <input type="text" id="email-signup" />
                                    </div>
                                    <div>
                                        <label for="category">Choose a category</label>
                                        <select id="categories" name="categories">
                                            <option value="fruit">Fruit</option>
                                            <option value="veggies">Veggies</option>
                                            <option value="meat_seafood">Meat and Seafood</option>
                                            <option value="dairy_eggs">Dairy and Eggs</option>
                                            <option value="drinks">Drinks</option>
                                            <option value="condiments">Condiments</option>
                                            <option value="misc">Miscellaneous</option>
                                        </select>
                                    </div>
                                    <div>
                                        <label for="expiration">Expiration Date</label>
                                        <input type="text" id="expiration" />
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
                <button type="button" id="addItem"
                    class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                    Submit
                </button>
                <button type="button" id="close"
                    class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                    Cancel
                </button>
            </div>
        </div>
    </div>
</div>


</div>